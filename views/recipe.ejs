<% if(recipe !=null ) {%>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb my-5">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active text-success" aria-current="page">
      <%- recipe.name %>
    </li>
  </ol>
</nav>

<div class="row">
  <div class="col-12 col-md-4">
    <img
      src="/uploads/<%- recipe.image %>"
      alt="<%- recipe.name %>"
      class="img-fluid sticky-top"
      style="top: 20px"
      loading="lazy"
    />
  </div>

  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12 text-success">
        <h1><%- recipe.name %></h1>
      </div>
      <div class="col-12 mb-4">
        <i class="bi bi-fire"></i>
        <%- recipe.category %>
      </div>

      <!-- ingredients -->
      <div class="row pt-2">
        <div class="col-12">
          <h4>Ingredients</h4>

          <ul class="list-group list-group-flush">
            <% recipe.ingredients.forEach(function(ingredients, index){ %>
            <li class="list-group-item text-success"><%= ingredients %></li>
            <% }) %>
          </ul>
        </div>
      </div>

      <!-- cooking instruction -->
      <div class="col-12" style="white-space: pre-line">
        <h4>Cooking Instructions</h4>
        <%- recipe.description %>
      </div>
    </div>
  </div>
</div>

<% } else { %> 
   <p>No item found....</p> 
<% } %>
